DB_NAME={{ finish_wordpress_restore_db_name }}
DB_USER={{ finish_wordpress_restore_db_user }}
DB_PASSWORD={{ finish_wordpress_restore_db_password }}

# Optional variables
DB_HOST={{ finish_wordpress_restore_db_host }}
DB_PREFIX=wp_

# Set to environment (development, staging, production)
{% if finish_wordpress_restore_environment_type == "dev" %}
WP_ENV=development
{% endif %}
{% if finish_wordpress_restore_environment_type == "qa" %}
WP_ENV=staging
{% endif %}
{% if finish_wordpress_restore_environment_type == "prod" %}
WP_ENV=production
{% endif %}

WP_HOME={{ finish_wordpress_restore_wp_home }}
WP_SITEURL=${WP_HOME}/wp

# Change these obviously. Will do it programmatically later, but for now just putting some values.
# See this - https://github.com/aaemnnosttv/wp-cli-dotenv-command#salts
